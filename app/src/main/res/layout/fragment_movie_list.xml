<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTheme"
        >

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/cinema_icon_invite_location"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:id="@+id/text_movie_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#aaa"
            android:textSize="15sp"
            android:text="浦东店"
            android:layout_toRightOf="@id/location_icon"
            android:clickable="true"
            android:onClick="toChoseMovieCity"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/test_movie_showing"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:text="正在热映"
                android:textColor="#555"
                android:background="#eee"
                android:clickable="true"
                android:onClick="toShowingMovies"/>
            <TextView
                android:id="@+id/test_movie_willing"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:text="即将上映"
                android:textColor="#fff"
                android:background="#888"
                android:clickable="true"
                android:onClick="toWillingMovies"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/switch_main_recycleview_layout_icon"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/tb_icon_home_qrcode_normal"/>
    </RelativeLayout>
    <com.yalantis.phoenix.PullToRefreshView
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--<ListView
            android:id="@+id/movie_now_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp" />-->

        <!--change listview to recycleview-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/movie_now_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             />

    </com.yalantis.phoenix.PullToRefreshView>
</LinearLayout>
