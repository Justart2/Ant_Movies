<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTheme"
    android:padding="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <ImageView
            android:id="@+id/imageView_movie_img"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/image8"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/imageView_movie_img"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/movie_like_rate_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/cinema_icon_like_40"
                />
            <TextView
                android:id="@+id/movie_like_rate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="75% 人喜欢"
                android:layout_marginTop="2dp"
                android:textStyle="italic"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="11sp"
                />
            <TextView
                android:id="@+id/to_movie_show_btn"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@color/colorTheme"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="@drawable/selector_login_type_btn"
                android:clickable="true"
                android:text="选座购票"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_movie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorTheme"
            android:layout_below="@+id/imageView_movie_img"
            android:textSize="16sp"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:singleLine="true"
            android:background="#ddd"
            android:text="电影名" />

        <!-- <TextView
             android:id="@+id/textView_movie_version"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="版本"
             android:layout_below="@id/textView_movie_name"
             android:layout_margin="5dp"
              />

         <TextView
             android:id="@+id/textView_movie_type"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_alignTop="@id/textView_movie_version"
             android:layout_margin="5dp"
             android:text="类型" />-->
    </RelativeLayout>

</RelativeLayout>
