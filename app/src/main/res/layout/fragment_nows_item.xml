<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    >
    <ImageView
        android:id="@+id/a_nows_logo"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/nows_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@id/a_nows_logo"
        android:lineSpacingExtra="8dp"
        android:textSize="15sp"
        android:text="在这个部落中，女孩为了能嫁个好人家，竟要在身上用刀刻划自残！"
        />
    <TextView
        android:id="@+id/test_nows_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/nows_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:text="类型:"/>
    <TextView
        android:id="@+id/nows_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/test_nows_1"
        android:text="--"/>
    <TextView
        android:id="@+id/nows_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@id/nows_title"
        android:layout_marginRight="5dp"
        android:text="--"/>
    <TextView
        android:id="@+id/test_nows_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/nows_date_time"
        android:text="时间:"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#aaa"
        android:layout_marginTop="3dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
