<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#5FB9E4"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/calendar_arrow_left_p"
            android:onClick="exitActicity"/>

        <TextView
            android:id="@+id/text_a_movie_show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="--"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fff"
        android:padding="10dp">
        <ImageView
            android:id="@+id/test_image_address"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/cinema_change_other_cinema"/>
        <TextView
            android:id="@+id/text_a_movie_show_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兰州城关万达广场"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_toRightOf="@id/test_image_address"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/text_a_movie_show_city_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----------------------"
            android:textSize="15sp"
            android:layout_toRightOf="@id/test_image_address"
            android:layout_below="@id/text_a_movie_show_city"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            />
        <ImageView
            android:id="@+id/test_image_a_movie_show_chose_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/cinema_icon_right_arrow_n"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/today_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:text="00月00日 今天"
            android:background="#5FB9E4"
            android:textSize="14sp"/>
    </LinearLayout>
    <com.yalantis.phoenix.PullToRefreshView
        android:id="@+id/a_movie_pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ListView
            android:id="@+id/a_movie_show_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:divider="@null"
            android:dividerHeight="5dp" />

    </com.yalantis.phoenix.PullToRefreshView>
</LinearLayout>
