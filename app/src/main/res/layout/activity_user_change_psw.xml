<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_change_psw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="top.aezdd.www.ant_movies.UserChangePswActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTheme"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_marginLeft="-5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/cinema_icon_back_p"
            android:onClick="exitActivity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:text="修改密码"
            android:textSize="20sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/ant_user_change_psw_old"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:layout_height="match_parent"
            android:background="@drawable/style_login_type_button1"
            android:padding="10dp"
            android:hint="输入旧密码"
            android:textColorHint="#aaa"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/ant_user_change_psw_new"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:layout_height="match_parent"
            android:background="@drawable/style_login_type_button1"
            android:padding="10dp"
            android:hint="输入新密码"
            android:textColorHint="#aaa"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="重复密码"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/ant_user_change_psw_new_re"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:layout_height="match_parent"
            android:background="@drawable/style_login_type_button1"
            android:padding="10dp"
            android:hint="请重复密码"
            android:textColorHint="#aaa"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="确认修改"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:onClick="changeUserPswClick"
        android:textColor="@drawable/selector_login_type_btn"
        android:background="@drawable/style_login_type_button"/>
</LinearLayout>
