<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_pay_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- 标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorTheme"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:gravity="center"
            android:background="@drawable/style_login_type_button"
            android:textSize="12sp"
            android:textColor="#00AAEF"
            android:onClick="toMainActivity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:text="支付结果"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ant_movie_order_pay_result_succeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        >
        <LinearLayout
            android:id="@+id/ant_movie_order_pay_result_succeed_layout"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/trip_travel__pay_result_sucess"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#65C07A"
                android:textSize="25sp"
                android:text="支付成功！"/>
        </LinearLayout>
        <TextView
            android:id="@+id/ant_movie_order_pay_result_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23.50￥"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ant_movie_order_pay_result_succeed_layout"
            android:textColor="@color/colorTheme"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ant_movie_order_pay_result_error"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="30dp"
        android:visibility="gone"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/trip_travel__pay_result_error"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF7F4C"
                android:textSize="25sp"
                android:text="支付失败！"/>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="25dp"
        android:background="#ddd"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/order_info_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_centerInParent="true"
            android:background="@drawable/style_movie_show_item_block"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#555"
                    android:text="订单："/>
                <TextView
                    android:id="@+id/ant_movie_order_pay_result_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    android:text="20170403121634568531"
                    android:textColor="#444"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#555"
                    android:text="电话："/>
                <TextView
                    android:id="@+id/ant_movie_order_pay_result_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    android:text="15117088744"
                    android:textColor="#444"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#555"
                    android:text="电影："/>
                <TextView
                    android:id="@+id/ant_movie_order_pay_result_movie_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    android:text="速度与激情8"
                    android:textColor="#444"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#555"
                    android:text="影厅："/>
                <TextView
                    android:id="@+id/ant_movie_order_pay_result_movie_hall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginLeft="10dp"
                    android:text="成都郫县蚂蚁广场 1号厅"
                    android:textColor="#444"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#555"
                    android:text="座位："/>
                <TextView
                    android:id="@+id/ant_movie_order_pay_result_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:text="[3排，4座][4排，6座][5排，8座]"
                    android:textColor="#444"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ant_movie_order_pay_result_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignRight="@id/order_info_linear_layout"
            android:layout_alignTop="@id/order_info_linear_layout"
            android:src="@drawable/order_pay_succeed200"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="bottom"
        android:layout_marginBottom="20dp"
        android:textColor="#888"
        android:textSize="10sp"
        android:layout_gravity="center_horizontal"
        android:text="订单支付信息可在我的影票中查看，祝您观影愉快!"/>

</LinearLayout>
