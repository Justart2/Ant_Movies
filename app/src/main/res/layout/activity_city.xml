<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaa"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/chose_city_title"
        android:layout_width="match_parent"
        android:background="@color/colorTheme"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/bank_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/cinema_icon_back_p"
            android:onClick="exitChoseCity"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="选择城市"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp">
        <EditText
            android:id="@+id/city_search_edit_text"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:background="@drawable/style_find_city_edit_text"
            android:drawableLeft="@drawable/cinema_actiivty_search_bg"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ant_movie_city_chose_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/ant_movie_loacal_city_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ant_movie_city_local_loading_icon"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:padding="20dp"
                android:visibility="invisible"
                android:src="@drawable/ant_movie_local_city_anim_loading"/>
            <TextView
                android:id="@+id/local_city_name"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textSize="20sp"
                android:onClick="choseLocalCity"
                android:clickable="true"
                android:gravity="center"
                android:textColor="#00ff00"
                android:text=""/>
            <TextView
                android:id="@+id/local_city_state_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:text="当前定位城市"
                android:layout_marginLeft="100dp"
                />
        </RelativeLayout>

        <ListView
            android:id="@+id/city_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fastScrollEnabled="false"
            android:scrollbars="none"
            android:background="#ddd"
            >

        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ant_movie_city_search_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#fff">
        <ListView
            android:id="@+id/ant_movie_city_search_city_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>

</LinearLayout>

