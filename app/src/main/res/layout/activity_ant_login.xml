<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ant_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#3F5060"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:onClick="exitActivity"
            android:src="@drawable/cinema_icon_back_p"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#eee"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="用户登录"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:clickable="true"
            android:onClick="toRegister"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:textColor="@drawable/selector_login_type_btn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/login_zh_label"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:textColor="@color/colorTheme"
                android:onClick="loginByAccountClick"
                android:text="账号密码登录"/>
            <TextView
                android:id="@+id/login_zh_nav"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#3F5060"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/login_phone_label"
                android:layout_width="match_parent"
                android:clickable="true"
                android:onClick="loginByPhoneClick"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#888"
                android:text="手机验证码登录"/>
            <TextView
                android:id="@+id/login_phone_nav"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#ddd"
                />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/login_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <!--<include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/frame_login_by_ant_account"
            />-->
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bbb"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- - 其他方式登录 - -"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:textColor="#777"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="true"
                android:onClick="sinaLogin"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_oauth_sina"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="微博"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:onClick="QQLogin"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_oauth_tencent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="QQ"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:onClick="wxLogin"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_oauth_weixin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="微信"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
