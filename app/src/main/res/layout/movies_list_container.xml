<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >

    <ImageView
        android:id="@+id/imageView_movie_img"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:id="@+id/textView_movie_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="版本"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/imageView_movie_img"
        android:layout_marginTop="43dp" />

    <TextView
        android:id="@+id/textView_movie_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/imageView_movie_img"
        android:text="类型" />

    <TextView
        android:id="@+id/textView_movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorTheme"
        android:layout_toRightOf="@+id/imageView_movie_img"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:text="电影名" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/movie_like_rate_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:src="@drawable/cinema_icon_like_40"
            />
        <TextView
            android:id="@+id/movie_like_rate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="75% 人喜欢"
            android:layout_marginTop="2dp"
            android:textStyle="italic"
            android:layout_gravity="center_horizontal"
            android:textColor="#000"
            android:textSize="11sp"
             />
        <TextView
            android:id="@+id/to_movie_show_btn"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@color/colorTheme"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@drawable/selector_login_type_btn"
            android:clickable="true"
            android:text="选座购票"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaa"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>